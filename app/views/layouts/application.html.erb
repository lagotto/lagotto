<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
      <%= "(#{Rails.env})" unless Rails.env.production? %>
      <%= APP_CONFIG['useragent'] %>
    </title>
    <%= csrf_meta_tags %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js" type="text/javascript"></script>
    <![endif]-->

    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= favicon_link_tag 'favicon.ico', :rel => 'shortcut icon' %>

    <%= javascript_include_tag "application" %>
    <script src="https://login.persona.org/include.js" type="text/javascript"></script>
    <script type='text/javascript'>
      function loginViaEmail() {
        navigator.id.get(function(assertion) {
          if (assertion) {
            $('input[name=assertion]').val(assertion);
            $('form').submit();
          } else {
            window.location = "#{failure_path}"
          }
        });
      }

      $(function() {
        $('button').click(function() {
          loginViaEmail();
          return false;
        });
      });
    </script>
  </head>

  <body>
    <header class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <div class="nav-collapse collapse">
            <a class="brand" href="<%= root_path %>">ALM</a>
            <% if can? :read, Alert %>
              <ul class="nav">
                <%= controller.controller_name == "index" ? '<li class="visible-desktop active">'.html_safe : '<li class="visible-desktop">'.html_safe %><%= link_to 'Home', admin_root_path %></li>
              </ul>
            <% end %>
          </div>
          <ul class="nav">
            <% if can? :read, Alert %>
              <%= controller.controller_name == "index" ? '<li class="hidden-desktop active">'.html_safe : '<li class="hidden-desktop">'.html_safe %><%= link_to "Home", admin_root_path %></li>
              <%= controller.controller_name == "articles" ? '<li class="active">'.html_safe : '<li>'.html_safe %><%= link_to "Articles", admin_articles_path %></li>
            <% else %>
              <%= controller.controller_name == "articles" ? '<li class="active">'.html_safe : '<li>'.html_safe %><%= link_to "Articles", articles_path %></li>
            <% end %>
            <% if can? :read, Alert %>
              <%= controller.controller_name == "sources" ? '<li class="active">'.html_safe : '<li>'.html_safe %><%= link_to "Sources", admin_sources_path %></li>
            <% else %>
              <%= controller.controller_name == "sources" ? '<li class="active">'.html_safe : '<li>'.html_safe %><%= link_to "Sources", sources_path %></li>
            <% end %>
          </ul>
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <div class="nav-collapse collapse">
            <% if can? :read, Alert %>
              <ul class="nav">
                <%= controller.controller_name == "api_requests" ? '<li class="dropdown active">'.html_safe : '<li class="dropdown">'.html_safe %>
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">Users <b class="caret"></b></a>
                  <ul class="dropdown-menu">
                    <li><%= link_to "All Users", admin_users_path %></li>
                    <li class="divider"></li>
                    <li><%= link_to "Local API Requests", admin_api_requests_path(key: "local") %></li>
                    <li><%= link_to "External API Requests", admin_api_requests_path(key: "external") %></li>
                    <li><%= link_to "Other API Requests", admin_api_requests_path %></li>
                  </ul>
                </li>
                <%= ["filters","alerts"].include?(controller.controller_name) ? '<li class="dropdown active">'.html_safe : '<li class="dropdown">'.html_safe %>
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">Errors <b class="caret"></b></a>
                  <ul class="dropdown-menu">
                    <li><%= link_to 'Alerts', admin_alerts_path %></li>
                    <li class="divider"></li>
                    <li><%= link_to "Filters", admin_filters_path %></li>
                  </ul>
                </li>
              </ul>
            <% end %>
            <% unless ["sessions","registrations"].include?(controller.controller_name) %>
              <ul class="nav pull-right">
                <% if user_signed_in? %>
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.name %> <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                      <li><%= link_to '<i class="icon-user"></i> Your Account'.html_safe, user_path("me") %></li>
                      <li class="divider"></li>
                      <li><%= link_to '<i class="icon-off"></i> Sign Out'.html_safe, destroy_user_session_path, :method => :delete, :id => "sign_out" %></li>
                    </ul>
                  </li>
                <% else %>
                  <li><%= link_to_setup_or_login %></li>
                <% end %>
              </ul>
            <% end %>
          </div>
        </div>
      </div>
    </header>

    <div class="container">
      <% flash.each do |name, msg| %>
        <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
          <a class="close" data-dismiss="alert">&#215;</a>
          <%= content_tag :div, msg, :id => "flash_#{name}" if msg.present? and msg.is_a?(String) %>
        </div>
      <% end %>

      <%= yield %>
    </div>

  </body>
</html>