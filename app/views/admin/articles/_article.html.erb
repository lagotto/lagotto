<%= form_for article do |f| %>

    <% if article.errors.any? %>
        <div>
          <h3>There was a problem saving the article.</h3>
        <ul>
          <% article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
        </div>
    <% end %>

    <p>
      <%= f.label :doi, "DOI" %><br />
      <%= f.text_field :doi %>
    </p>
    <p>
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :published_on %><br />
      <%= date_select 'article', 'published_on', :start_year => Time.zone.now.year - 10, :end_year => Time.zone.now.year, :order => [:month, :day, :year] %>
    </p>
    <p>
      <%= f.submit(article.new_record? ? "Create" : "Update") %>
    </p>
<% end %>
